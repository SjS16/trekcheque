<%= render 'layouts/nav_bar' %>
<p id="notice"><%= notice %></p>
<body>
<h1 id="user-header">
<strong>
<%= @user.name %>
</strong>
</h1>


<div class="user-email">
  <strong>Email:</strong>
  <%= @user.email %>
</div>

<div class="container-fluid">
  <div class="row">
      <% @trips_of_user.each do |trip| %>
      <div class="col-lg-4">
        <%= link_to trip_path(trip.id) do %>  
        <div class="trip-link">
         <strong><%= trip.name %></strong><br>
        | <%= trip.start_date %> to <%= trip.end_date %> |
        <br>
        <% if trip.start_location && trip.end_location%>
        | <%= trip.start_location %> to <%= trip.end_location %> |       
        <% end %>
        <br>
        <br>
        Friends on the trip:<br>
        | <% trip.attendees.each do |attendee| %>
        <% friend = User.find(attendee.user_id) %>
        <%= friend.name %> |
        <% end %>
        <% end %>
      </div>
      </div>
      <% end %>
  </div>
</div>
</body>
      
